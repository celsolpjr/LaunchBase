<div class="item">
    <div>Avatar</div>
    <input type="url" name="avatar_url" placeholder="http://" value="{{teacher.avatar_url}}">
</div>

<div class="item">
    <div>Nome Completo</div>
    <input type="text" name="name" placeholder="Seu nome" value="{{teacher.name}}">
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <input type="date" name="birth" value="{{teacher.birth}}">
</div>

<div class="item">
    <div>Grau de Escolaridade</div>
    <select name="graduate">
        <option value="EM" {% if teacher.graduate == "EM" %} selected {% endif %}>Ensino Médio Completo</option>
        <option value="ES" {% if teacher.graduate == "ES" %} selected {% endif %}>Ensino Superior Completo</option>
        <option value="MS" {% if teacher.graduate == "MS" %} selected {% endif %}>Mestrado</option>
        <option value="DT" {% if teacher.graduate == "DT" %} selected {% endif %}>Doutorado</option>
    </select>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <span><input type="radio" name="class_type" value="P" {% if teacher.class_type == "P" %} checked {% endif %}>Presencial</span>
    <span><input type="radio" name="class_type" value="D" {% if teacher.class_type == "D" %} checked {% endif %}>À distância</span>
</div>

<div class="item">
    <div>Area de Atuação</div>
    <input type="text" name="atuation_area" placeholder="Separe as opções por virgula" value="{{teacher.atuation_area}}">
</div>