{% extends "layout.njk" %}

{% block head %}

    <title>Teachers</title>

{% endblock %}

{% block content %}
    
    <section class="card table-card">
        <table width="100%">
            <div id="header">
                <a href="/teachers/create" class="create-button" id="create-button-id">Novo</a>
                <form id="header-form" action="/teachers" method="GET">
                    <input id="header-input" type="text" name="filter" placeholder="Filtrar Professor">
                    <button type="submit" id="header-button">Filtrar</button>
                </form>
            </div>
            <thead>
                <tr>
                    <th>Nome Completo</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background-image: url({{ teacher.avatar_url }})"></span>
                            {{ teacher.name }}
                        </td>
                        <td>
                            {{ teacher.atuation_area }} 
                        </td>
                        <td><a href="/teachers/{{teacher.id}}">Editar</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>

{% endblock %}